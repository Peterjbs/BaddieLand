rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/admins/$(request.auth.token.email));
    }

    // Characters collection - admins only
    match /characters/{characterId} {
      allow read: if true; // Public read for game
      allow write: if isAdmin();
    }

    // Moves collection - admins only
    match /moves/{moveId} {
      allow read: if true; // Public read for game
      allow write: if isAdmin();
    }

    // Admins collection - only readable by admins
    match /admins/{email} {
      allow read: if isAdmin();
      allow write: if false; // Only manageable through Firebase Console
    }
  }
}
