rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Style & Vibe Guides Collection
    match /styleVibeGuides/{document=**} {
      // Allow read access to all authenticated users
      allow read: if request.auth != null;
      
      // Allow write access only to authenticated users with admin role
      // Adjust this based on your security requirements
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Add rules for other collections here
  }
}
